{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-sm p-4" style="width: 400px; background-color: #F5F5DC;">
        <h2 class="card-title text-center mb-4">Registro</h2>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {'class': 'd-flex flex-column gap-3'}}) }}
            <div>
                {{ form_label(registrationForm.nombre) }}
                {{ form_widget(registrationForm.nombre, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.nombre) }}
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword, 'Contraseña') }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="form-check">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(registrationForm.agreeTerms, 'Acepto los términos', {'label_attr': {'class': 'form-check-label'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="btn btn-success w-100 mt-3">Registrar</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
