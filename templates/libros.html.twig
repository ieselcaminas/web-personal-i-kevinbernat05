{% extends 'base.html.twig' %}

{% block title %}Lista de Libros{% endblock %}

{% block body %}
<h2 class="mb-4 text-center">Listado de Libros</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    {% for libro in libros %}
        <div class="col">
            <div class="card h-100 shadow-sm" style="background-color: #F5F5DC;">
                {% if libro.imagen %}
                    <img src="{{ libro.imagen }}" class="card-img-top" alt="{{ libro.titulo }}">
                {% endif %}
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ libro.titulo }}</h5>
                    <p class="card-text mb-1"><strong>Género:</strong> {{ libro.genero }}</p>
                    <p class="card-text mb-3"><strong>Autor:</strong> {{ libro.autor.nombre }}</p>
                    <div class="mt-auto d-flex gap-2">
                        <a href="{{ path('editar_libro', {'id': libro.id}) }}" class="btn btn-primary w-50">Editar</a>
                        <form action="{{ path('eliminar_libro') }}" method="post" class="w-50">
                            <input type="hidden" name="libro_id" value="{{ libro.id }}">
                            <button type="submit" class="btn btn-danger w-100">Eliminar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <p class="text-center">No hay libros registrados.</p>
    {% endfor %}
</div>

<div class="mt-4 text-center">
    <a href="{{ path('insertar_libro') }}" class="btn btn-success me-2">Añadir Libro</a>
    <a href="{{ path('buscar_libros') }}" class="btn btn-secondary">Buscar Libros</a>
</div>
{% endblock %}
