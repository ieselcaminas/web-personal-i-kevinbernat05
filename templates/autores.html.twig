{% extends 'base.html.twig' %}

{% block title %}Autores{% endblock %}

{% block body %}
<h2 class="text-center mb-4">Lista de Autores</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    {% for autor in autores %}
        <div class="col">
            <div class="card h-100 shadow-sm" style="background-color: #F5F5DC;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ autor.nombre }}</h5>
                    <p class="card-text mb-1"><strong>Fecha de nacimiento:</strong> {{ autor.fechaNacimiento|date('d/m/Y') }}</p>
                    <p class="card-text mb-3"><strong>Género:</strong> {{ autor.genero }}</p>
                    <div class="mt-auto d-flex gap-2">
                        <a href="{{ path('editar_autor', {'id': autor.id}) }}" class="btn btn-primary w-50">Editar</a>
                        <form action="{{ path('eliminar_autor') }}" method="post" class="w-50">
                            <input type="hidden" name="autor_id" value="{{ autor.id }}">
                            <button type="submit" class="btn btn-danger w-100">Eliminar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <p class="text-center">No hay autores registrados.</p>
    {% endfor %}
</div>

<div class="mt-4 text-center">
    <a href="{{ path('insertar_autor') }}" class="btn btn-success me-2">Añadir Autor</a>
    <a href="{{ path('buscar_autores') }}" class="btn btn-secondary">Buscar Autor</a>
</div>
{% endblock %}
