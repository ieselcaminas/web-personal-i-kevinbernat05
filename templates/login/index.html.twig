{% extends 'base.html.twig' %}

{% block title %}Bienvenido a LibrosKevin{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-sm p-4" style="width: 400px; background-color: #F5F5DC;">
        <h2 class="card-title text-center mb-4">Iniciar sesión</h2>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post" class="d-flex flex-column gap-3">
            <div>
                <label for="nombre" class="form-label">Nombre de usuario:</label>
                <input type="text" id="nombre" name="_username" value="{{ last_username }}" required class="form-control">
            </div>

            <div>
                <label for="password" class="form-label">Contraseña:</label>
                <input type="password" id="password" name="_password" required class="form-control">
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Entrar</button>
        </form>

        <div class="text-center mt-3">
            <span>¿No tienes cuenta?</span>
            <a href="{{ path('app_register') }}" class="btn btn-success w-100 mt-2">Registrar</a>
        </div>
    </div>
</div>
{% endblock %}
