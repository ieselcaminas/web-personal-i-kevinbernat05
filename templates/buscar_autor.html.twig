{% extends 'base.html.twig' %}

{% block title %}Buscar Autores{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <div class="card shadow-sm p-4 w-100" style="max-width: 600px; background-color: #F5F5DC;">
        <h2 class="card-title text-center mb-4">Buscar Autores</h2>

        <form method="get" action="{{ path('buscar_autores') }}" class="d-flex gap-2 mb-4">
            <input type="text" name="q" value="{{ termino }}" placeholder="Buscar autor..." class="form-control" required>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>

        {% if termino %}
            <h5 class="mb-3">Resultados para "{{ termino }}"</h5>

            {% if autores is not empty %}
                <div class="list-group">
                    {% for autor in autores %}
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>{{ autor.nombre }}</strong> — 
                                Nacido el {{ autor.fechaNacimiento ? autor.fechaNacimiento|date('d/m/Y') : 'Desconocida' }} — 
                                Género: {{ autor.genero }}
                            </div>
                            <a href="{{ path('editar_autor', {'id': autor.id}) }}" class="btn btn-sm btn-outline-primary">Editar</a>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-center text-danger mt-2">No se encontraron autores con ese nombre.</p>
            {% endif %}
        {% else %}
            <p class="text-center text-muted">Escribe algo para buscar un autor.</p>
        {% endif %}

        <div class="text-center mt-4">
            <a href="{{ path('app_authors') }}" class="btn btn-secondary">⬅ Volver a la lista</a>
        </div>
    </div>
</div>
{% endblock %}
